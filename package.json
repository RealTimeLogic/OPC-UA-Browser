{
  "name": "opcua-browser",
  "version": "0.11.0",
  "private": true,
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "run-p type-check lint build-only",
    "test": "run-p test:unit cypress:run test:e2e",
    "dev": "vite",
    "build-only": "vite build",
    "create-zip": "vite build && node create-archive.js",
    "dist": "node create-archive.js",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-pattern .gitignore",
    "format": "prettier --write src/",
    "test:unit": "vitest",
    "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "cypress:run": "cypress run --config video=false --component",
    "cypress:run:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cross-env CYPRESS_REMOTE_DEBUGGING_PORT=9222 cypress open --component'",
    "preinstall": "npm install opcua-client-0.11.0.tgz"
  },
  "dependencies": {
    "bootstrap": "^5.3.6",
    "pinia": "^3.0.2",
    "vue": "^3.5.14",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.2.10",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.23",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "archiver": "^7.0.1",
    "cross-env": "^7.0.3",
    "cypress": "^14.3.3",
    "eslint": "^9.27.0",
    "eslint-plugin-cypress": "^4.3.0",
    "eslint-plugin-vue": "^10.1.0",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "opcua-client": "file:opcua-client-0.11.0.tgz",
    "prettier": "^3.5.3",
    "sass": "^1.89.0",
    "start-server-and-test": "^2.0.12",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.3",
    "vue-tsc": "^2.2.10"
  }
}
